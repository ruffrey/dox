#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander')
  , pkg = require('../package')
  , util = require('util')
  , jsdoxy = require('..');

// options

program
  .version(pkg.version)
  .option('-r, --raw', 'output "raw" comments, leaving the markdown intact')
  .option('-a, --api', 'output markdown readme documentation')
  .option('-d, --debug', 'output parsed comments for debugging')
  .option('-S, --skipSingleStar', 'set to false to ignore `/* ... */` comments');

// examples

program.on('--help', function(){
  console.log('  Examples:');
  console.log('');
  console.log('    # stdin');
  console.log('    $ jsdoxy > myfile.json');
  console.log('');
  console.log('    # operates over stdio');
  console.log('    $ jsdoxy < myfile.js > myfile.json');
  console.log('');
});

// parse argv

program.parse(process.argv);

// process stdin

var buf = '';
process.stdin.setEncoding('utf8');
process.stdin.on('data', function(chunk){ buf += chunk; });
process.stdin.on('end', function(){
  var obj = jsdoxy.parseComments(buf, { raw: program.raw || program.api, skipSingleStar: !!program.skipSingleStar });
  if (program.debug) {
    process.stdout.write(util.inspect(obj, false, Infinity, true) + '\n');
  } else if (program.api) {
    process.stdout.write(jsdoxy.api(obj));
  } else {
    process.stdout.write(JSON.stringify(obj, null, 2));
  }
}).resume();
